{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "vite build",
    "copy-assets": "rm -rf dist/client && mkdir -p dist/client && cp -r ../web/.output/public/. dist/client/",
    "build:api": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:gen": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply corvus --local",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.9",
    "drizzle-orm": "^0.36.0",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.11.0",
    "hono": "^4.9.6"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.0",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "unenv": "^1.10.0",
    "vite": "^6.3.5",
    "vite-plugin-string": "^1.2.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.36.0"
  }
}
