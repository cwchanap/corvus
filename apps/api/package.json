{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:gen": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply corvus --local",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "drizzle-orm": "^0.36.0",
    "hono": "^4.9.6"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.0",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "wrangler": "^4.36.0"
  }
}
