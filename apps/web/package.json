{
  "name": "web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vinxi dev --port 5000",
    "dev:cf": "pnpm build && npx wrangler pages dev dist --port=8788 --d1=DB=corvus",
    "build": "vinxi build",
    "start": "vinxi start",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "setup-db": "node scripts/setup-db.js",
    "db:local": "npx wrangler d1 execute corvus --file=./src/lib/db/schema.sql",
    "db:remote": "npx wrangler d1 execute corvus --file=./src/lib/db/schema.sql --remote",
    "test": "playwright test",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@repo/common": "workspace:*",
    "@repo/ui-components": "workspace:*",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.1",
    "@solidjs/start": "^1.0.8",
    "better-auth": "^0.8.0",
    "kysely": "^0.28.3",
    "solid-js": "^1.8.11",
    "vinxi": "^0.5.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@playwright/test": "^1.54.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.31.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "5.8.2",
    "vite-plugin-solid": "^2.8.2",
    "wrangler": "^4.31.0"
  }
}
