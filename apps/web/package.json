    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@cloudflare/workers-types": "^4.20241218.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.31.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "5.8.2",
