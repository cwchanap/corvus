{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["@solidjs/start/env", "node"]
  },
  "include": ["src/**/*", "app.config.ts"],
  "exclude": [
    "node_modules",
    ".vinxi",
    ".output",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
