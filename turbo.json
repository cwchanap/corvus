{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "LOCALAPPDATA",
    "CHROME_PROFILE_DIR",
    "CHROME_USER_DATA_DIR",
    "CHROME_PROFILE_NAME",
    "FIREFOX_PROFILE_DIR",
    "CI",
    "NODE_ENV",
    "MODE",
    "VITE_API_BASE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".wxt/**", ".vinxi/**", ".output/**", "dist/**"]
    },
    "build:web": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".output/**", ".vinxi/**"]
    },
    "copy-assets": {
      "dependsOn": ["web#build:web"],
      "cache": false
    },
    "build:api": {
      "dependsOn": ["copy-assets"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["build:api"],
      "cache": false,
      "inputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:ui": {
      "cache": false,
      "persistent": true
    },
    "dev:backend": {
      "cache": false,
      "persistent": true
    },
    "db:local": {
      "cache": false,
      "persistent": false
    }
  }
}
