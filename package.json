{
  "name": "corvus",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:deploy": "turbo run build:web build:api",
    "copy-assets": "rm -rf apps/api/dist/client && mkdir -p apps/api/dist/client && cp -r apps/web/.output/public/. apps/api/dist/client/",
    "deploy": "turbo run deploy",
    "dev": "turbo run db:local dev --filter=api --filter=web --filter=extension",
    "dev:web": "turbo run dev --filter=web",
    "dev:web:split": "bun --cwd apps/web dev:split",
    "dev:web:cf": "turbo run build db:local dev:backend dev:ui --filter=web",
    "dev:extension": "turbo run dev --filter=extension",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test --filter=e2e",
    "test:ui": "turbo run test:ui --filter=e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "bun@1.1.42",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings 25",
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
